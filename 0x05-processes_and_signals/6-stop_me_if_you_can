#!/usr/bin/env bash
# stops the 4-to_infinity_and_beyond process without using kill or killall

# Find the PID of the script
PID=$(pgrep -f "4-to_infinity_and_beyond")

if [ -z "$PID" ]; then
    echo "Process not running"
    exit 1
fi

# Stop the process using pkill
pkill -f "4-to_infinity_and_beyond"
echo "Stopped 4-to_infinity_and_beyond (PID: $PID)"
